        <div class="max-w-7xl mx-auto px-4 py-4 flex justify-between items-center">
            <!-- Logo -->
            <h1 class="text-2xl font-bold text-blue-600 dark:text-blue-400">Chat App</h1>

            <!-- Desktop Nav -->
            <!-- Desktop Nav -->
            <nav class="hidden md:flex items-center gap-4">
                <!-- Search -->
                <div class="relative">
                    <input type="text" placeholder="Search teams..."
                        class="px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400" />
                    <span class="absolute right-3 top-2.5">üîç</span>
                </div>

                <!-- Create -->
                <button
                    class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 dark:hover:bg-blue-500 transition">
                    + Create
                </button>

                <!-- Theme toggle -->
                <button id="theme-toggle"
                    class="p-2 rounded-full bg-gray-200 dark:bg-gray-700 hover:bg-gray-300 dark:hover:bg-gray-600 transition">
                    üåô
                </button>
            </nav>


            <!-- Theme + Hamburger (Mobile) -->
            <div class="flex items-center gap-3 md:hidden">
                <button id="theme-toggle-mobile" class="p-2 rounded-full bg-gray-200 dark:bg-gray-700">üåô</button>
                <button id="menu-btn" class="p-2 rounded bg-gray-200 dark:bg-gray-700">
                    ‚ò∞
                </button>
            </div>
        </div>

        <!-- Mobile Dropdown -->
        <div id="menu-dropdown"
            class="hidden flex-col space-y-4 px-4 py-4 bg-white dark:bg-gray-900 border-t border-gray-200 dark:border-gray-700 md:hidden">

            <!-- Search -->
            <div class="relative">
                <input type="text" placeholder="Search teams..."
                    class="w-full px-4 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400" />
                <span class="absolute right-3 top-2.5">üîç</span>
            </div>

            <!-- Create -->
            <button
                class="px-4 py-2 bg-blue-600 text-white rounded-lg shadow hover:bg-blue-700 dark:hover:bg-blue-500 transition w-full">
                + Create
            </button>

            <!-- Links -->
            <a href="#" class="block hover:text-blue-600 dark:hover:text-blue-400">Home</a>
            <a href="#" class="block hover:text-blue-600 dark:hover:text-blue-400">Features</a>
            <a href="#" class="block hover:text-blue-600 dark:hover:text-blue-400">About</a>
        </div>

    </header>

    <script>
        // Mobile menu toggle
        document.getElementById("menu-btn").addEventListener("click", () => {
            document.getElementById("menu-dropdown").classList.toggle("hidden");
        });
    </script>



    <!-- Main Layout -->
    <div class="flex flex-1 overflow-hidden">

        <!-- Sidebar (Chats List) -->
        <aside id="chat-list"
            class="w-full md:w-1/3 lg:w-1/4 border-r border-gray-200 dark:border-gray-700 bg-white dark:bg-gray-800 overflow-y-auto transition-all">
            <!-- Search Bar -->
            <div class="p-3">
                <input type="text" placeholder="Search teams..."
                    class="w-full px-3 py-2 rounded-lg bg-gray-100 dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
            </div>
            <!-- Chats -->
            <ul>
                <li class="p-4 border-b border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer"
                    onclick="openChat('Phoenix Devs')">
                    <h3 class="font-semibold">Phoenix Devs</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Last message preview‚Ä¶</p>
                </li>
                <li class="p-4 border-b border-gray-200 dark:border-gray-700 hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer"
                    onclick="openChat('Bloomware')">
                    <h3 class="font-semibold">Bloomware</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Last message preview‚Ä¶</p>
                </li>
                <li class="p-4 hover:bg-gray-100 dark:hover:bg-gray-700 cursor-pointer" onclick="openChat('Hive')">
                    <h3 class="font-semibold">Hive</h3>
                    <p class="text-sm text-gray-500 dark:text-gray-400">Last message preview‚Ä¶</p>
                </li>
            </ul>
        </aside>

        <!-- Chat Area -->
        <main id="chat-area" class="hidden md:flex flex-col flex-1 bg-gray-50 dark:bg-gray-900">

            <!-- Chat Header -->
            <div class="flex items-center justify-between p-4 border-b border-gray-200 dark:border-gray-700">
                <div class="flex items-center gap-2">
                    <button id="back-btn" class="p-2 rounded bg-gray-200 dark:bg-gray-700">‚¨Ö</button>
                    <h2 id="chat-title" class="font-bold text-lg">Select a team</h2>
                </div>
                <div></div>
            </div>

            <!-- Messages (scrollable) -->
            <div id="messages" class="flex-1 overflow-y-auto p-4 space-y-3">
                <p class="text-gray-400 text-center">No chat selected</p>
            </div>

            <!-- Input Bar (BOTTOM, fixed in layout) -->
            <div
                class="p-3 border-t border-gray-200 dark:border-gray-700 flex items-center gap-2 bg-white dark:bg-gray-800">
                <input type="text" placeholder="Type a message..."
                    class="flex-1 px-3 py-2 rounded-lg bg-white dark:bg-gray-700 border border-gray-300 dark:border-gray-600 focus:outline-none focus:ring-2 focus:ring-blue-400">
                <button
                    class="px-4 py-2 bg-blue-600 dark:bg-blue-500 text-white rounded-lg hover:bg-blue-700 dark:hover:bg-blue-600">
                    ‚û§
                </button>
            </div>
        </main>

        </main>

    </div>

    <script>
        // Theme persistence
        if (localStorage.getItem("theme") === "dark") {
            document.documentElement.classList.add("dark");
        }
        const toggleTheme = () => {
            const isDark = document.documentElement.classList.toggle("dark");
            localStorage.setItem("theme", isDark ? "dark" : "light");
        };
        document.getElementById("theme-toggle").addEventListener("click", toggleTheme);

        // Open Chat
        function openChat(teamName) {
            document.getElementById("chat-title").innerText = teamName;
            document.getElementById("messages").innerHTML = `
        <div class="self-start bg-gray-200 dark:bg-gray-700 p-2 rounded-lg max-w-xs">Hello from ${teamName}!</div>
        <div class="self-end bg-blue-600 text-white p-2 rounded-lg max-w-xs">Hey üëã</div>`;
            // Mobile: hide chat list, show chat
            document.getElementById("chat-list").classList.add("hidden");
            document.getElementById("chat-area").classList.remove("hidden");
        }

        // Back button for mobile
        document.getElementById("back-btn").addEventListener("click", () => {
            document.getElementById("chat-area").classList.add("hidden");
            document.getElementById("chat-list").classList.remove("hidden");
        });
    </script>
    <script src="/socket.io/socket.io.js"></script>
        <script>
        const socket = io()
        const userName = "<%= JSON.stringify(userName) %>"
        socket.emit("stream-user-teams", userName);

        socket.on("user-teams-chunk", (chunk) => {
            console.log(chunk);            
        });

        socket.on("user-teams-end", () => {
            console.log("data fetch complete");
        });
    </script>
</body>

</html>